        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApp1"
        Title="Room Selection" Height="150" Width="338" ResizeMode="NoResize">
    <Grid>
        <Label Content="Welcome to PChat.  Select a room, or create a new one:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" />
        <Button Name="JoinRoomButton" Content="Join Room" Margin="0,0,13,12" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="60" />
        <Button Name="CreateRoomButton" Content="Create Room" HorizontalAlignment="Right" Margin="0,0,78,12" VerticalAlignment="Bottom"/>
        <ComboBox Name="RoomList" HorizontalAlignment="Right" Margin="0,41,13,0" VerticalAlignment="Top" Width="247"/>

    </Grid>
</Window>
